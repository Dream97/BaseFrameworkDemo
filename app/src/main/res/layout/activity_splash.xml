<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <com.rastargame.rick.read.mvp.view.widget.FixedImageView
            android:id="@+id/splash_img"
            android:scaleType="centerCrop"
            android:layout_width="480dp"
            android:layout_height="640dp"/>
    </ScrollView>

    <ImageView
        android:id="@+id/weread_logo_iv"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160.0dip"
        android:scaleType="fitCenter"
        android:src="@drawable/welcome_weread" />

    <ImageView
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_below="@id/weread_logo_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="171.0dip"
        android:scaleType="fitCenter"
        android:src="@drawable/weread_signature" />

</RelativeLayout>