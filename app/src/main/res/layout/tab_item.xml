<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabwidget_item_layout"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/selector_tabitem_bg"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    >
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/tabwidget_item_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:scaleType="fitCenter"
        android:src="@drawable/selector_tabitem_book"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tabwidget_item_text"
        android:layout_below="@+id/tabwidget_item_image"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@drawable/selector_tabitem_text"
        android:textSize="14sp"
        android:text="bug"
        android:layout_height="wrap_content" />
</RelativeLayout>
